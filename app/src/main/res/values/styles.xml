<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:homeAsUpIndicator">@drawable/nav_drawer</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DisplayTheme"/>
    <style name="DisplayTheme.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/text_size_medium_3</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DisplayTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">#888888</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DisplayTheme.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/text_size_medium_2</item>
    </style>



</resources>