<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:minHeight="@dimen/row_height"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ratings_container"
        android:gravity="center_vertical|left"
        android:layout_centerVertical="true"
        android:text="Movie Title Here is really long"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/ratings_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rating_critic_fresh"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/fresh_row"
            android:drawablePadding="5dp"
            android:text="100%"/>

        <TextView
            android:id="@+id/rating_critic_rotten"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/rotten_row"
            android:drawablePadding="5dp"
            android:text="100%"/>

        <TextView
            android:id="@+id/rating_audience_fresh"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/popcorn_row"
            android:drawablePadding="5dp"
            android:text="10%"/>

        <TextView
            android:id="@+id/rating_audience_rotten"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawableLeft="@drawable/badpopcorn_row"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:text="10%"/>

        </LinearLayout>

</RelativeLayout>